# ==============================================================================
# VISIA Platform - Configurações de Ambiente
# ==============================================================================
# Copie este arquivo para .env e configure suas variáveis
# ==============================================================================

# Configuração do Banco de Dados
DATABASE_PATH=visia_platform.db

# Segurança (ALTERE EM PRODUÇÃO!)
SECRET_KEY=sua_chave_secreta_aqui_mude_em_producao
ADMIN_PASSWORD=admin123

# API Externa (opcional)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Rate Limiting
API_RATE_LIMIT_PER_HOUR=100

# Upload
MAX_UPLOAD_SIZE_MB=50

# Ambiente
ENVIRONMENT=development
DEBUG=true

# Email (para notificações - opcional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
